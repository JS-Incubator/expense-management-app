<!---Header Includes File-->
<%- include('../includes/header.ejs') %>

<div class="background"></div>
<div class="auth-container register-height">
  <div class="auth-header">
    <div class="header-btn active" id="register-btn">Register</div>
    <div class="header-btn" id="login-btn">Login</div>
  </div>
  <div class="auth-content">
    <div id="register-form" class="form-content">
      <form method="POST" action="/sign-up">
        <div class="input-container">
          <label class="lable" for="username">User Name</label>
          <input
            class="input-field"
            type="text"
            id="username"
            name="username"
          />
        </div>

        <div class="input-container">
          <label class="lable" for="email">Email</label>
          <input class="input-field" type="email" id="email" name="email" />
        </div>
        <div class="input-container">
          <label class="lable" for="password">Password</label>
          <input
            class="input-field"
            type="password"
            id="password"
            name="password"
          />
        </div>
        <div class="input-container">
          <label class="lable" for="confirmPassword">Confirm Password</label>
          <input
            class="input-field"
            type="password"
            id="confirmPassword"
            name="confirmPassword"
          />
        </div>
        <div class="btn-container">
          <button class="btn-submit log-in" type="submit">Register</button>
          <button class="btn-submit google" type="submit">
            <i class="fab fa-google"></i> Google
          </button>
          <button class="btn-submit facebook" type="submit">
            <i class="fab fa-facebook-f"></i> Facebook
          </button>
        </div>
      </form>
    </div>
    <div id="login-form" class="form-content form-hide">
      <form method="POST" action="/log-in">
        <div class="input-container">
          <label class="lable" for="email">Email</label>
          <input class="input-field" type="email" id="email" name="email" />
        </div>
        <div class="input-container">
          <label class="lable" for="password">Password</label>
          <input
            class="input-field"
            type="password"
            id="password"
            name="password"
          />
        </div>
        <div class="btn-container">
          <button class="btn-submit log-in" type="submit">Log-in</button>
          <button class="btn-submit google" type="submit">
            <i class="fab fa-google"></i> Google
          </button>
          <button class="btn-submit facebook" type="submit">
            <i class="fab fa-facebook-f"></i> Facebook
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!--Script file for auth for handling-->
<script src="/helpers/app/authHandler.js"></script>

<!---Footer includes file-->
<%- include('../includes/footer.ejs') %>
